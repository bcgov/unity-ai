# Unity AI Platform Environment Configuration

## PLATFORM SETTINGS
ASPNETCORE_ENVIRONMENT="Development"
ASPNETCORE_URLS="http://+:80"
UNITY_AI_BUILD_VERSION="1.0.0"

## APPLICATION SETTINGS
# Frontend and backend port configuration
UNITY_AI_WEB_PORT_EXT="4200"
UNITY_AI_WEB_PORT_INT="80"
UNITY_AI_API_PORT_EXT="5000"
UNITY_AI_API_PORT_INT="5000"

## DATABASE SETTINGS
# PostgreSQL configuration with pgvector support
UNITY_AI_POSTGRES_DB="unity_ai"
UNITY_AI_POSTGRES_USER="unity_user"
UNITY_AI_POSTGRES_PASSWORD="********"
UNITY_AI_DB_HOST="postgres"
UNITY_AI_DB_PORT="5432"
UNITY_AI_PGIMAGE="pgvector/pgvector:pg16"

# Database connection strings
ConnectionStrings__Default="Host=${UNITY_AI_DB_HOST};port=${UNITY_AI_DB_PORT};Database=${UNITY_AI_POSTGRES_DB};Username=${UNITY_AI_POSTGRES_USER};Password=${UNITY_AI_POSTGRES_PASSWORD}"

## UNITY.AI.REPORTING CONFIGURATION

# Metabase Integration
METABASE_KEY="your_metabase_api_key_here"
MB_EMBED_SECRET="your_metabase_embed_secret_here"
MB_EMBED_URL="https://test-unity-reporting.apps.silver.devops.gov.bc.ca"

# JWT Authentication
JWT_SECRET="INSERT_SUPER_SECRET_KEY_HERE_FOR_PRODUCTION"

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT="your_endpoint_here"
AZURE_OPENAI_API_KEY="your_key_here"
AZURE_OPENAI_DEPLOYMENT="gpt-4o-mini"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT="text-embedding-3-large"
AZURE_OPENAI_API_VERSION="2024-02-01"

