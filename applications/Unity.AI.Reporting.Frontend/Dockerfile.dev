FROM node:22-alpine

# Accept build arguments
ARG JWT_SECRET

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Replace JWT_SECRET placeholder in environment files
RUN sed -i "s/__JWT_SECRET_PLACEHOLDER__/${JWT_SECRET}/g" src/environments/environment.ts

# Expose port 80 for dev server
EXPOSE 80

# Start the development server with live reload on port 80
# Using npx ng directly for better compatibility with Angular CLI 20+
CMD ["npx", "ng", "serve", "--host", "0.0.0.0", "--port", "80", "--poll", "1000", "--disable-host-check"]